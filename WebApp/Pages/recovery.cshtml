@page
@model WebApp.Pages.recoveryModel
@{
}
<link href="~/css/recovery.css" rel="stylesheet" />
<script src="~/js/recovery.js"></script>
<body>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="card-title text-center">Recuperación de Contraseña</h1>
                            <form id="recoveryForm">
                                <div class="form-group">
                                    <label for="email">Correo electrónico:</label>
                                    <input type="email" class="form-control" id="email" required>
                                    <div class="invalid-feedback" id="emailError">
                                        Ingresa un correo electrónico válido.
                                    </div>
                                </div>
                            <button type="button" class="btn btn-secondary btn-block mt-3" id="recoverybtn" onclick="validateCorreo()">Enviar correo de recuperación</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

</body>