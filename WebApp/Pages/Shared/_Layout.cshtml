<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link href="~/css/layout.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/controlactions.js"></script>
    <script src="https://kit.fontawesome.com/c1fbdc5809.js" crossorigin="anonymous"></script>
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.5/datatables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.5/datatables.min.js"></script>
    <script src="~/js/layout.js"></script>
    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
    <script src="https://kit.fontawesome.com/804e4edc60.js" crossorigin="anonymous"></script>
    <script src="https://cdn.emailjs.com/dist/email.min.js"></script>
</head>
<body>
    
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">WizzEvent</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-page="/Index">
                                Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-page="/LandingPage">
                                Nosotros
                            </a>
                        </li>

                        <li class="nav-item opciones" data-rol="Cliente General">
                            <a class="nav-link" asp-area="" asp-page="/Profile">Perfil</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Cliente General">
                            <a class="nav-link" asp-area="" asp-page="">Extra</a>
                        </li>

                        <li class="nav-item opciones" data-rol="Gestor de Eventos">
                            <a class="nav-link" asp-area="" asp-page="/CreateEvent">Crear evento</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Administrador">
                            <a class="nav-link" asp-area="" asp-page="/CreateEvent">Crear evento</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Gestor de Eventos">
                            <a class="nav-link" asp-area="" asp-page="/Profile">Perfil</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Gestor de Eventos">
                            <a class="nav-link" asp-area="" asp-page="/Dashboardge">Dashboard</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Gestor de Eventos">
                            <a class="nav-link" asp-area="" asp-page="/BoletosGE">Tiquetes</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Administrador">
                            <a class="nav-link" asp-area="" asp-page="/Admin/adminmembresiascrud">Membresias</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Administrador">
                            <a class="nav-link" asp-area="" asp-page="/Admin/admindashboard">Dashboard</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Administrador">
                            <a class="nav-link" asp-area="" asp-page="/Admin/adminlogs">Logs</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Administrador">
                            <a class="nav-link" asp-area="" asp-page="/Admin/adminusercrud">Usuarios</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Administrador">
                            <a class="nav-link" asp-area="" asp-page="/Admin/admineventscrud">Eventos</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Administrador">
                            <a class="nav-link" asp-area="" asp-page="/Profile">Perfil</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav"> 
                        <li class="nav-item">
                            <a class="btn btn-secondary" id="btnSingIn" asp-page="/createuserge">Vuelvete un vendedor</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-danger m-2" id="btnSingOut" asp-page="/index" onclick="CerrarSesion()">Cerrar Sesion</a>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/Cart" style="color: inherit;text-decoration: none;"><i class="fa-solid fa-cart-shopping" id="btnCart"></i></a><p class="item-count" id="items-quantity">0</p>
                        </li>

                        <li class="nav-item" id="cart">
                            <a class="btn btn-secondary m-2 btn-lg" id="btnLogin" asp-page="/loginuser">Iniciar Sesion</a>
                        </li>
                        
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script>

        function actualizarCantidad() {
            var idUser = localStorage.getItem('idUsuario');

            $.ajax({
                url: "https://localhost:7152/api/ShoppingCart/RetrieveCantCartItems?idUser=" + idUser,
                type: "GET",
                dataType: "json",
                success: function (data) {
                    $('#items-quantity').text(data);
                    console.log(data);
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        }

        // Llamar a la función cuando la página se carga inicialmente
        $(document).ready(function () {
            actualizarCantidad();
        });

        $('#btnCart').click(function () {

        });
    </script>
</body>
</html>