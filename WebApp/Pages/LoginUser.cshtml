@page
@model WebApp.Pages.LoginUserModel
@{
    //Layout = "";
}

<head>
    <script src="~/js/Login.js"></script>
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="container-login">
        <div class="text-center">
            <img src="~/img/CodeWizz.png" alt="Imagen de selección" class="img-fluid mt-3">
        </div>
        <div class="card p-4">
            <div class="card-body">
                <h1 class="text-center">¡Hola de nuevo!</h1>
                <form>
                    <div class="form-group">
                        <label for="email">Correo Electrónico:</label>
                        <input type="email" id="email" name="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña:</label>
                        <input type="password" id="password" name="password" class="form-control">
                    </div>
                    <div class="text-recovery text-center">
                        <a asp-page="/recovery">Recuperar contraseña</a>
                    </div>
                    <div class="form-group text-center">
                        <button type="button" class="btn btn-secondary btn-block mt-3" onclick="return validarLoginFormulario()">Iniciar sesión</button>
                    </div>
                </form>
                <div class="text-center mt-3">
                    <p>No eres miembro? <a asp-page="/createuser">Regístrate ahora</a></p>
                </div>
            </div>
        </div>
    </div>
</body>